@model IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/shop_homepage.css">
}
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-start">
            @{
                foreach (var a in Model.Products)
                {
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Sale badge-->
                            <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                            <!-- Product image-->
                            <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@a.productName</h5>
                                    <!-- Product price-->
                                    @a.productPrice
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto"
                                       onclick="Buy(@a.ID,'@Url.Action("AddOrderItemsToSession", "CustomerOrderNotCart", new { Area = "Customer" })', '#total_price', '@System.Globalization.CultureInfo.CurrentCulture.Name')">
                                        Get to Cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            </div>
        </div>
</section>




    @section Scripts
{
        <environment include="Development">
            <script src="~/js/Product.js"></script>
        </environment>
        <environment exclude="Development">
            <script src="~/js/Product.min.js"></script>
        </environment>
    }
